extends base.pug

block content 
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name = "title", placeholder="Title", required, type="text", maxLength: 80)
        input(name = "description", placeholder="Description", required, type="description", minLength=20)
        input(name = "hashtags", placeholder="Hashtags", required, type="hashtags")
        input(type="submit", value="Upload Video")
