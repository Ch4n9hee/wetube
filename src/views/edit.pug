extends base.pug

block content
    h4 Update Video
    form(method="POST")
        input(name="title", placeholder="Video Title", value=video.title, required, maxLength = 80)
        input(name = "description", placeholder="Description", value=video.description, required, type="description", minLength=20)
        input(name = "hashtags", placeholder="Hashtags", required, type="hashtags", value=video.hashtags.join())
        input(value="Save", type="submit")
